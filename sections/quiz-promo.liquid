
<style>
.quiz-landing {
  background: linear-gradient(180deg, #FFF5F7 0%, #FFFFFF 100%);
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.section-padding {
  padding: 48px 24px; /* Increased padding */
}

.container-6xl {
  width: 100%;
  max-width: 72rem; /* Increased from 48rem */
  margin: 0 auto;
  padding: 0 16px;
}

.container-4xl {
  width: 100%;
  max-width: 56rem; /* Increased from 42rem */
  margin: 0 auto;
  padding: 0 16px;
}

.hero-title {
  background: linear-gradient(90deg, #F472B6 0%, #EC4899 50%, #F472B6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: clamp(2rem, 5vw, 3.5rem); /* Responsive font size */
  line-height: 1.2;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-align: center;
}

.hero-subtitle {
  font-size: clamp(1.125rem, 3vw, 1.25rem);
  color: #4B5563;
  max-width: 36rem;
  margin: 0 auto;
  text-align: center;
  line-height: 1.6;
}

.features-section {
  background: rgba(255, 255, 255, 0.5);
  width: 100%;
}

.features-grid {
  display: grid;
  gap: 24px; /* Increased gap */
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* Responsive grid */
  max-width: 1200px;
  margin: 0 auto;
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 24px;
  max-width: 56rem;
  margin: 0 auto;
}

.feature-card {
  background: white;
  padding: 24px; /* Increased padding */
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(255,192,203,0.15);
  transition: all 300ms ease;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.feature-icon-container {
  width: 48px; /* Increased size */
  height: 48px;
  background: #FCE7F3;
  border-radius: 12px;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon {
  font-size: 24px; /* Increased size */
  color: #EC4899;
}

.feature-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: #1F2937;
}

.feature-description {
  font-size: 1rem;
  color: #4B5563;
  line-height: 1.6;
}

.cta-section {
  background: linear-gradient(90deg, #FFF5F7 0%, #FCE7F3 100%);
  border-radius: 24px;
  padding: 48px 32px; /* Increased padding */
  box-shadow: 0 8px 32px rgba(255,192,203,0.12);
  text-align: center;
  max-width: 100%;
}

.cta-content {
  max-width: 42rem;
  margin: 0 auto;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  background: black;
  color: white;
  padding: 1rem 2rem;
  border-radius: 12px;
  font-size: 1.125rem;
  font-weight: 500;
  transition: all 300ms ease;
  text-decoration: none;
  margin-top: 1.5rem;
}

.cta-button:hover {
  background: rgba(0, 0, 0, 0.9);
  transform: translateY(-2px);
}

/* Responsive Styles */
@media (min-width: 768px) {
  .section-padding {
    padding: 64px 32px;
  }
  
  .features-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 767px) {
  .cta-section {
    padding: 32px 24px;
  }
  
  .container-6xl,
  .container-4xl {
    padding: 0 24px;
  }
}
</style>

<div class="quiz-landing">
  <div class="section-padding">
    <div class="container-6xl">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    </div>
  </div>

  <div class="features-section section-padding">
    <div class="container-6xl">
      <div class="{% if section.settings.features_layout == 'list' %}features-list{% else %}features-grid{% endif %}">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="feature-card" {{ block.shopify_attributes }}>
              <div class="feature-icon-container">
                <span class="feature-icon">
                  {% case block.settings.icon %}
                    {% when 'sparkles' %}‚ú®
                    {% when 'heart' %}üíñ
                    {% when 'star' %}‚≠ê
                  {% endcase %}
                </span>
              </div>
              <h3 class="feature-title">{{ block.settings.title }}</h3>
              <p class="feature-description">{{ block.settings.description }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="section-padding">
    <div class="container-4xl">
      <div class="cta-section">
        <div class="cta-content">
          <h2 style="font-size: clamp(1.5rem, 4vw, 2rem); font-weight: 700; margin-bottom: 1rem;">
            {{ section.settings.cta_title }}
          </h2>
          <p style="font-size: 1.125rem; color: #4B5563; margin-bottom: 2rem;">
            {{ section.settings.cta_text }}
          </p>
          <a href="{{ section.settings.cta_link }}" class="cta-button">
            {{ section.settings.cta_button_text }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" 
                 style="margin-left: 8px; transition: transform 300ms ease;" 
                 class="arrow-icon">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

