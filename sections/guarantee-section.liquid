<style>
.guarantee-section {
  padding: 6rem 1rem; /* Augmenté de 4rem à 6rem */
}

.guarantee-container {
  max-width: 40rem; /* Réduit de 56rem à 40rem pour un contenu plus compact */
  margin: 0 auto;
}

.guarantee-title {
  text-align: center;
  margin-bottom: 4rem; /* Augmenté de 3rem à 4rem */
}

.guarantee-title h2 {
  background: linear-gradient(90deg, #F472B6 0%, #9333EA 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: clamp(2.25rem, 6vw, 2.75rem); /* Augmenté la taille */
  line-height: 1.2;
  font-weight: 700;
}

.guarantee-title h3 {
  font-size: clamp(1.75rem, 5vw, 2rem); /* Augmenté la taille */
  color: #374151;
  margin-top: 1rem; /* Augmenté de 0.5rem à 1rem */
  font-weight: 500;
}

.guarantee-card {
  background: rgba(255, 255, 255, 0.95); /* Plus opaque */
  backdrop-filter: blur(10px);
  padding: 3rem; /* Augmenté de 2rem à 3rem */
  border-radius: 1.5rem; /* Augmenté de 1rem à 1.5rem */
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8px 32px rgba(255,192,203,0.15);
  transition: box-shadow 0.3s ease;
}

.guarantee-card:hover {
  box-shadow: 0 12px 48px rgba(255,192,203,0.25);
}

.guarantee-content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.guarantee-item {
  display: flex;
  align-items: flex-start;
  gap: 1.5rem; /* Augmenté de 1rem à 1.5rem */
}

.guarantee-icon {
  font-size: 2rem; /* Augmenté de 1.5rem à 2rem */
  line-height: 1;
  padding-top: 0.25rem;
  flex-shrink: 0;
}

.guarantee-item-content h4 {
  font-size: 1.5rem; /* Augmenté de 1.25rem à 1.5rem */
  font-weight: 500;
  margin-bottom: 0.75rem; /* Augmenté de 0.5rem à 0.75rem */
}

.guarantee-item-content p {
  color: #4B5563;
  font-size: 1.125rem; /* Ajouté une taille de police spécifique */
  line-height: 1.6;
}

.guarantee-button {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem; /* Augmenté de 0.5rem à 0.75rem */
  background: linear-gradient(to right, #EC4899, #9333EA);
  color: white;
  font-weight: 600;
  padding: 1.75rem 3rem; /* Augmenté padding horizontal et vertical */
  border-radius: 9999px;
  font-size: 1.25rem; /* Augmenté de 1.125rem à 1.25rem */
  transition: all 0.3s ease;
  text-align: center;
  border: none;
  cursor: pointer;
  text-decoration: none;
  margin-top: 1rem; /* Ajouté une marge supplémentaire */
}

.guarantee-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(236, 72, 153, 0.3);
  background: linear-gradient(to right, #DB2777, #7E22CE);
}

.guarantee-button-icon {
  width: 1.5rem;
  height: 1.5rem;
  flex-shrink: 0;
  color: #EC4899;
}

.icon {
  width: 1.5rem;
  height: 1.5rem;
  flex-shrink: 0;
  color: #EC4899;
}

.icon-heart {
  margin-top: 0.25rem;
}
</style>

<section class="guarantee-section">
  <div class="guarantee-container">
    <div class="guarantee-title">
      <h2>{{ section.settings.title }}</h2>
      <h3>{{ section.settings.subtitle }}</h3>
    </div>

    <div class="guarantee-card">
      <div class="guarantee-content">
        <div class="guarantee-item">
          {% render 'icon', icon: 'heart', class: 'icon icon-heart' %}
          <div class="guarantee-item-content">
            <h4>{{ section.settings.satisfaction_title }}</h4>
            <p>{{ section.settings.satisfaction_text }}</p>
          </div>
        </div>

        <div class="guarantee-item">
          {% render 'icon', icon: 'sparkles', class: 'icon' %}
          <div class="guarantee-item-content">
            <p class="text-lg font-medium">{{ section.settings.priority_text }}</p>
          </div>
        </div>

        <div style="text-align: center; margin-top: 2rem;">
          <a href="{{ section.settings.button_link }}" class="guarantee-button">
            {% render 'icon', icon: 'heart', class: 'icon' %}
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Section Garantie",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre principal",
      "default": "Garantie Glow"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Zéro Risque, 100% Confiance !"
    },
    {
      "type": "text",
      "id": "satisfaction_title",
      "label": "Titre satisfaction",
      "default": "Satisfait(e) ou accompagné(e) !"
    },
    {
      "type": "textarea",
      "id": "satisfaction_text",
      "label": "Texte satisfaction",
      "default": "Si après 30 jours, tu ne constates aucune amélioration sur ta peau, contacte-moi et je t'accompagnerai personnellement pour ajuster ta routine et maximiser tes résultats."
    },
    {
      "type": "text",
      "id": "priority_text",
      "label": "Texte priorité",
      "default": "Ton glow est ma priorité ! ✨"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "Je commence ma transformation aujourd'hui !"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "Section Garantie",
      "settings": {}
    }
  ]
}
{% endschema %}
