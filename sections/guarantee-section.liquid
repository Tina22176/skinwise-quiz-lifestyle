
<style>
.guarantee-section {
  padding: 48px 24px;
  background: #FFF5F7;
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.guarantee-container {
  width: 100%;
  max-width: 72rem;
  margin: 0 auto;
  padding: 0 16px;
}

.guarantee-title {
  text-align: center;
  margin-bottom: 4rem;
}

.guarantee-title h2 {
  background: linear-gradient(90deg, #F472B6 0%, #EC4899 50%, #F472B6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: clamp(2rem, 5vw, 3.5rem);
  line-height: 1.2;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.guarantee-title h3 {
  font-size: clamp(1.125rem, 3vw, 1.25rem);
  color: #4B5563;
  margin-top: 1rem;
  font-weight: 500;
  max-width: 36rem;
  margin: 0 auto;
  line-height: 1.6;
}

.guarantee-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 48px 32px;
  border-radius: 24px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8px 32px rgba(255,192,203,0.15);
  transition: box-shadow 0.3s ease;
  max-width: 56rem;
  margin: 0 auto;
}

.guarantee-content {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.guarantee-item {
  display: flex;
  align-items: flex-start;
  gap: 2rem;
}

.guarantee-icon {
  font-size: 2.5rem;
  line-height: 1;
  padding-top: 0.25rem;
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guarantee-item-content h4 {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #1F2937;
}

.guarantee-item-content p {
  color: #4B5563;
  font-size: 1.125rem;
  line-height: 1.6;
}

.guarantee-button-wrapper {
  text-align: center;
  margin-top: 3rem;
}

.guarantee-button {
  display: inline-flex;
  align-items: center;
  gap: 1rem;
  background: linear-gradient(to right, #EC4899, #9333EA);
  color: white;
  font-weight: 600;
  padding: 1.5rem 3rem;
  border-radius: 9999px;
  font-size: 1.25rem;
  transition: all 0.3s ease;
  text-decoration: none;
}

.guarantee-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(236, 72, 153, 0.3);
  background: linear-gradient(to right, #DB2777, #7E22CE);
}

.guarantee-card:hover {
  box-shadow: 0 12px 48px rgba(255,192,203,0.25);
}

@media (max-width: 768px) {
  .guarantee-section {
    padding: 32px 24px;
  }
  
  .guarantee-card {
    padding: 32px 24px;
  }
  
  .guarantee-button {
    padding: 1.25rem 2rem;
    width: 100%;
    justify-content: center;
  }
  
  .guarantee-item {
    gap: 1.5rem;
  }
  
  .guarantee-icon {
    font-size: 2rem;
    width: 40px;
    height: 40px;
  }
}
</style>

<section class="guarantee-section">
  <div class="guarantee-container">
    <div class="guarantee-title">
      <h2>{{ section.settings.title }}</h2>
      <h3>{{ section.settings.subtitle }}</h3>
    </div>

    <div class="guarantee-card">
      <div class="guarantee-content">
        <div class="guarantee-item">
          <span class="guarantee-icon">üíñ</span>
          <div class="guarantee-item-content">
            <h4>{{ section.settings.satisfaction_title }}</h4>
            <p>{{ section.settings.satisfaction_text }}</p>
          </div>
        </div>

        <div class="guarantee-item">
          <span class="guarantee-icon">‚ú®</span>
          <div class="guarantee-item-content">
            <p>{{ section.settings.priority_text }}</p>
          </div>
        </div>

        <div class="guarantee-button-wrapper">
          <a href="{{ section.settings.button_link }}" class="guarantee-button">
            <span class="guarantee-icon">‚ú®</span>
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

